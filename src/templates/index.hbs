<!DOCTYPE html>
<html lang="fr">
<head>
	{{> partials/p-head}}
</head>
<body class="">
	<main class="container">
		<form class="form js__form__control" data-form-control="true">
		  <div class="form__group">
		    <label for="name">Name</label>
		    <input 
		    	id="name" 
		    	class="form__field" 
		    	type="text"
	    	 data-form-validators="isRequired minLen_4 maxLen_12"/>
		  </div>
		  <div class="form__group">
		    <label for="number">Number</label>
		    <input 
		    	id="number" 
		    	class="form__field" 
		    	type="number" 
		    	data-form-validators="isRequired"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="phone">Phone</label>
		    <input 
		    	id="phone" 
		    	class="form__field" 
		    	type="text"
		    	data-form-validators="isPhone"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="email">Email</label>
		    <input 
		    	id="email" 
		    	class="form__field" 
		    	type="text"
		    	data-form-validators="isEmail"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="siret">Siret</label>
		    <input 
		    	id="siret" 
		    	class="form__field" 
		    	type="text"
		    	data-form-validators="isSiret"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="bic">Bic</label>
		    <input 
		    	id="bic" 
		    	class="form__field" 
		    	type="text"
		    	data-form-validators="isBic"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="iban">Iban</label>
		    <input 
		    	id="iban" 
		    	class="form__field" 
		    	type="text"
		    	data-form-validators="isIban"/>
		    <div class="form__message"></div>
		  </div>
		  <div class="form__group">
		    <label for="url">URL</label>
		    <input 
		    	id="url" 
		    	class="form__field" 
		    	type="url"
		    	data-form-validators="isUrl"/>
		    <div class="form__message"></div>
		  </div> 
		  <div class="form__group">
		    <label for="select">Select</label>
		    <select id="select">
		      <option value="">Make a choice</option>
		      <option value="1">1</option>
		    </select>
		    <div class="form__message"></div>
		  </div> 
		  <div class="form__group">
		    <label for="checked">Checked</label>
		    <input 
		    	id="nameField" 
		    	class="form__field" 
		    	type="checkbox"
		    	data-form-validators="isChecked"/>
		    <div class="form__message"></div>
		  </div>  
		  <div class="form__group form__group--row">
		    <button type="submit">Send</button>
		    <button type="reset">Reset</button>
		  </div>
		</form>
	</main>
</body>
</html>